#
# ~/.bashrc
#

# Place Environment Variables in the owsm env file (~/.config/uwsm/env)

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

alias ls='ls --color=auto'
alias grep='grep --color=auto'
PS1='[\u@\h \W]\$ '

# Nvm (Node Version Manager)
source /usr/share/nvm/init-nvm.sh

# My aliases
alias ll='ls -l --color=auto'
alias la='ls -la --color=auto'

# Zoxide
alias z='zoxide'
eval "$(zoxide init bash)"

# direnv stuff
eval "$(direnv hook bash)"

# Neovim
export EDITOR=nvim
export VISUAL=nvim

# Trash-cli
alias rm='echo "This is not the command you are looking for. Use \"th\" instead. To use rm append a \"\\\""; false'
alias th='trash-put'

alias hx='helix'

# Paths
PATH=$PATH:$HOME/dev/zig-x86_64-linux-0.15.1/
PATH=$PATH:/home/isaaki/.local/bin
PATH=$PATH:$HOME/dev/zls-0.15.0

# Tmux-Zoxide-Sessionizer
export _ZO_FZF_OPTS="--height=100%"
bind '"\C-f":"tz\n"'
